    var locals = {
      header: 'Dear ' + name + ',',
      unsubscribe_link: "http://silofunds.com/user/email-unsubscribe/" + user.id
    };
    var transporter = nodemailer.createTransport(smtpTransport({
     service: 'Gmail',
     auth: {user: 'notifications@silofunds.com',
           pass: 'ThisIsNotificationsAccount'}
    }));

    var templatePath = path.join(process.cwd(), 'email-templates/variable-template');
    var template = new EmailTemplate(templatePath);
    template.render(locals, function(err, results){
      if (err) {
         callback();
         return console.error(err);
      }
      transporter.sendMail({
        from: 'Andros Wong',
        to: user.email,
        subject: fund + ' has an application deadline in one week!',
        html: results.html
      }, function(err, responseStatus){
        if (err) {
         console.error(err);
         console.log("USER ERROR", user.email);
         callback();
        }
        else{
          console.log("SUCCESS");
          console.log("USER", user.email);
          console.log(responseStatus);
        }

      });
    });
  });
}
