function sendExpiredFundsList(){
  var today = new Date();
  models.funds.findAll({where: {deadline: {$lt: today}}}).then(function(funds){
    console.log("GOT IN", funds);
    var fundsList = [];
    for(var i =0; i < funds.length; i++){
      funds[i] = funds[i].get();
      console.log('fund', funds[i].title);
      console.log('id', funds[i].id);
      var fundObj = {
        title: funds[i].title,
        id: funds[i].id
      };
      fundsList.push(fundObj);
    }
    var templatePath = path.join(process.cwd(), 'email-templates/fund-deadline-list-template');
    var template = new EmailTemplate(templatePath);
    var transporter = nodemailer.createTransport(smtpTransport({
     service: 'Gmail',
     auth: {user: 'notifications@silofunds.com',
           pass: 'ThisIsNotificationsAccount'}
    }));
    var locals = {
      funds: fundsList
    };
    template.render(locals, function(err, results){
      if (err) {
         return console.error(err);
      }
      transporter.sendMail({
        from: 'Andros Wong',
        to: "andros@silofunds.com",
        subject: 'Expired funds',
        html: results.html
      }, function(err, responseStatus){
        if (err) {
         console.error(err);
        }
        else{
          console.log("SUCCESS");
          console.log(responseStatus);
        }

      });
    });

  });
}

