                    if (err) {
                      console.log("Error bulk syncing degrees into funds index:");
                      console.log(err);
                    }
                    console.log("Bulk sync for degrees complete");
                    var autocompleteUniversitiesBody =[];
                    var list_of_universities = require('../resources/universities.js');
