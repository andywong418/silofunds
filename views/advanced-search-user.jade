.tab-pane.fade#advs-user
  form#advs-user-form.advs_user_form(action='/results/users', method='get', name='advs_user_form')
    section.keyword
      .row
        .col-md-offset-2.col-md-8
          label(for='tags') Keywords
          input#advanced_user_tags(type="text", name="tags", form="advs-user-form")
    section.header
      .row
        .col-md-12
          h5 About the user
    section.content-section
      .row
        .col-md-4
          label(for='age') Age
          input#advanced_user_age(type = "number", name = "age", form = "advs-user-form")
        .col-md-4
          label(for= 'user_country_of_residence') Country of Residence
          input#advanced_user_country_of_residence(type = "text", name = "country_of_residence", form = "advs-user-form")
        .col-md-4
          label(for='user_religion') Religion
          input#advanced_user_religion(type = "text", name = "religion", form = "advs-user-form")
      .row
        .col-md-4
          label(for='funding_needed') Amount Needed
          input#advanced_user_funding_needed(type = "number", name = "funding_needed", form = "advs-user-form")
