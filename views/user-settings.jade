	body
		script#settings-template(type='text/template')
			nav.navbar.navbar-custom.navbar-fixed-top(role='navigation')
					#container.container
						.navbar-header
							button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-main-collapse')
								i.fa.fa-bars
							form.search_form(id = "search-form", action='/results', method='get', name='search_form')
								#dropdown.dropdown
									button#search-dropdown.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
										i.fa.et-down.fa-bars
										i.fa.et-down.fa-angle-down
									ul#dropdown-menu.dropdown-menu
										li.dropdown-header type of profile search
										li#grants
											| Grants
											span
												i.fa.fa-check
										li#users
											| Users  
											span
												i.fa.fa-check         
								input#text_search(type='text', name='tags', placeholder='Keywords - Subject, University, Degree level')
								button#search_button.btn.btn-info(type='submit')
									i.fa.fa-search
							.instruction-pointer
								p Search for grants or users by entering your desired subject, university and/or degree level
							.instruction-pointer-2
								p Use advanced search to look at specific fields for funds or other users. 
						#collapse.collapse.navbar-collapse.navbar-right.navbar-main-collapse
								ul.nav.navbar-nav
									li.signin-icon
										button
											a#home(href="/users/" + user.id + "/"+session)
												i.fa.fa-user
									//      
										li.signin-icon
											button
											 i.fa.fa-comment-o
									li.signin-icon
										.dropdown
											button#settings-button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
												i.fa.fa-cog
											ul#settings-menu.dropdown-menu
												li#settings
													a(href='/users/settings/' + user.id + '/'+session)
														| Settings
												li.divider(role='separator')
												li#logout
													a(href='#/users/logout')
														| Log out

				section#advanced-search.container.content-section.text-center
					.row
						.col-md-4
							label(for='age') Age:
							input#advanced-age(type = "number", name = "age") 	
						.col-md-4
							label(for= 'nationality') Nationality:
							input#advanced-nationality(type = "text", name = "nationality", value = user.nationality) 
						.col-md-4
							label(for= 'religion') Religion:
							input#religion(type = "text", name = "religion", value = user.religion) 
					.row
						.col-md-4
							label#amount_needed(for= 'amount_needed') Amount:
							input#input-amount(type = "text", name = "funding_needed", value ="£" + user.funding_needed)
						.col-md-4
							label#merit-or-finance Merit or Finance
							.row
								.col-md-6
									label.radio-inline
										input#merit(type='radio', name='merit_or_finance', value='merit')
										| Merit
								.col-md-6
										label.radio-inline
												input#finance(type='radio', name='merit_or_finance', value='finance')
												| Finance
						.col-md-4
							label#gender Gender
							.row
								.col-md-6
									label.radio-inline
										input#male(type='radio', name = 'gender', value= 'male')
										| Male
								.col-md-6
									label.radio-inline
										input#female(type='radio', name = 'gender', value = 'female')
										| Female
				section#advanced-search-2.container.content-section.text-center
					.row
						.col-md-4
							label(for='age') Age:
							input#advanced-age-2(type = "number", name = "user_age") 
						.col-md-4
							label(for= 'nationality') Nationality:
							input#advanced-nationality(type = "text", name = "user_nationality", value = user.nationality) 
						.col-md-4
							label(for= 'religion') Religion:
							input#religion(type = "text", name = "user_religion", value = user.religion) 
					.row
						.col-md-4
							label#amount_needed(for= 'amount_needed') Amount:
							input#input-amount(type = "text", name = "user_funding_needed", value ="£" + user.funding_needed)
						.col-md-4
							label#gender Gender
							.row
								.col-md-6
									label.radio-inline
										input#male(type='radio', name = 'user_gender', value= 'male')
										| Male
								.col-md-6
									label.radio-inline
										input#female(type='radio', name = 'user_gender', value = 'female')
										| Female

				section#edit.container.content-section
					.row
						.col-md-2.col-xs-4#categories
							ul
								li#general-settings
									i.fa.fa-gears
									| General settings
								li#account
									i.fa.fa-lock
									| Account details
							hr
							ul
								li#logout
									a(href= "/users/logout")
										| Log out
						.col-md-1
						.col-md-7.col-xs-8#profile-settings
							form(action = '/users/settings/'+ user.id + '/' + session, method= 'post', id = 'change-settings')
								.general
									.row#username-row
										.col-md-5
											p Name:
										.col-md-5
											p#grey <%= name %>
										.col-md-1
											i.fa.fa-pencil.edit-username
											p.edit Edit
									.row#input-name
										.col-md-12.center-block
											button#save-username.save Save Changes
									hr.account
									.row#email-row
										.col-md-5
											p Email:
										.col-md-5
											p#grey= user.email
										.col-md-1
											i.fa.fa-pencil.edit-email
											p.edit Edit
									.row#input-email
										.col-md-12.center-block
											button#save-email.save Save Changes
									hr.account
									.row#password-row
										.col-md-5
											p Password:
										.col-md-5
											p#grey Change password
										.col-md-1
											i.fa.fa-pencil.edit-password
											p.edit Edit
									.row#input-password
										.col-md-12.center-block
											button#save-password.save Save Changes
									br
								.profile-edit
									.row#description-row
										.col-md-4
											p Description:
										.col-md-6
											p#grey <%= description %>
										.col-md-1
											i.fa.fa-pencil.edit-password
											p.edit Edit
									.row#input-description
										.col-md-12.center-block
											button#save-description.save Save changes
									hr
									.row#nationality-row
										.col-md-5
											p Nationality:
										.col-md-5
											p#grey <%= nationality %>
										.col-md-1
											i.fa.fa-pencil.edit-nationality
											p.edit Edit
									.row#input-nationality
											.col-md-12.center-block
												button#save-nationality.save Save Changes
									hr
									.row#religion-row
										.col-md-5
											p Religion:
										.col-md-5
											p#grey <%= religion %>
										.col-md-1
											i.fa.fa-pencil.edit-religion
											p.edit Edit
									.row#input-religion
										.col-md-12.center-block
											button#save-religion.save Save changes
									hr
									.row#funding_needed-row
										.col-md-5
											p Funding Needed:
										.col-md-5
											p#grey <%= funding_needed %>
										.col-md-1
											i.fa.fa-pencil.edit-funding_needed
											p.edit Edit
									.row#input-funding_needed
										.col-md-12.center-block
											button#save-funding_needed.save Save changes
									//		
										hr
										.row
											.col-md-6
												p Receive email updates weekly
											.col-md-5
												// input(type='checkbox', name='email-updates', checked='')
	script(src= '../../../javascript/user-settings.js')
	script.
