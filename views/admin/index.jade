doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title Silo - Admin Portal
    // Bootstrap
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    nav.navbar.navbar-default
      .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Silo
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='#') Link
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#') Link
            li
              a(href='#') Link
            li
              a(href='#') Link
        // /.navbar-collapse
      // /.container-fluid

    .container
      h1 Welcome to the Admin Portal!
      table.table.table-bordered.table-responsive
        tr
          th ID
          th Fund Title
          th Tags
          th Minimum Age
          th Maximum Age
          th Minimum Amount
          th Maximum Amount
          th Invite Only
          th Link
          th Nationality
          th Religion
        each fund in funds
          tr
          td= fund.id
          td= fund.title
          td= fund.tags
          td= fund.minimum_age
          td= fund.maximum_age
          td= fund.minimum_amount
          td= fund.maximum_amount
          td= fund.invite_only
          td
            a.btn.btn-default.btn-link(href=fund.link, role='button') Link
          td= fund.nationality
          td= fund.religion
          td
            form(action='/admin/' + fund.id + '/edit', method='get', name='edit_fund')
              button.btn.btn-primary(type='submit') Edit
          td
            form(action='/admin/' + fund.id + '/destroy', method='post', name='destroy_fund')
              button.btn.btn-danger(type='submit') Destroy
      a.btn.btn-default.btn-success(href='/admin/new', role='button') Create a new fund

    // jQuery (necessary for Bootstrap's JavaScript plugins)
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    // Include all compiled plugins (below), or include individual files as needed
    script(src='javascript/lib/bootstrap.min.js')
