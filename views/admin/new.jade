    section#about.container.content-section
      a(href='/admin') Back to Manage Funds
      hr
      form.create_fund(action='/admin', method='post', name='create_fund')
        .row
          .col-md-3
            h4 Title
            input(type='text', name='title', id = "new_title", required)
          .col-md-9
            h4 Tags
            input(type='text', name='keywords', id = "tags", required, placeholder = 'separate with ,')
        hr
        .row
            .col-md-3
              h4 Min_age
              input(type='number', name='min_age', id = "min_age")
            .col-md-3
              h4 Max_age
              input(type='number', name='max_age', id = "max_age")
            .col-md-3
              h4 Min_amount
              input(type='number', name='min_amount', id = "min_amount")
            .col-md-3
              h4 Max_amount
              input(type='number', name='max_amount', id = "max_amount")
        hr
        .row
            .col-md-3
              h4 Invite Only?
              input(type='checkbox', name='invite', id = "invite")
            .col-md-9
              h4 Link
              input(type='text', name='link', id = "link")
        hr
        .row
          .col-md-12
            h4 Description
            textarea#description(cols='144', rows='5', name='description')
        hr
        .row
          .col-md-3
            h4 Nationality
            input(type='text', name='nationality', id = "nationality")
          .col-md-3
            h4 Religion
            input(type='text', name='religion', id = "religion")
          .col-md-6
            h4 Financial Situation
            textarea#financial_situation(cols='60', rows='5', name='financial_situation')
        hr
        .row
          .col-md-6
            h4 Gender
            h6 (if none specified / available for both, uncheck both boxes)
            h6 Male
            input(type='checkbox', name='female', id = "female")
            hr
            h6 Female
            input(type='checkbox', name='female', id = "female")
          .col-md-6
            h4 Merit / Finance Based
            h6 (if none specified / available for both, uncheck both boxes)
            h6 Merit
            input(type='checkbox', name='merit', id = "merit")
            hr
            h6 Finance
            input(type='checkbox', name='finance', id = "finance")
        hr
        .row
          button.btn.btn-danger(type='submit') Create fund!
        hr
