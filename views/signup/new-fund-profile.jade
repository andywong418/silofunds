extends layout-signup

block extraHeader
	link(href= '/stylesheets/new-fund-profile.css', rel= 'stylesheet')

block content
		#user-modal
			script#account-template(type='text/template')
					nav.navbar.navbar-custom.navbar-fixed-top
						.col-sm-3
						.col-sm-5.col-xs-12
							p#almost Finish the signup by entering details about your trust.
						.col-sm-0.col-xs-4
						.col-sm-4.col-xs-6.center-block
							a#next.account-submit(href="/fund/funding_creation", type="button") Done
					section#account-info.container.content-section
						h4#name <%= fundName %>
							.row
								.col-md-12.center-block
									figure#profile-figure
											input#my_file(type='file', style='display: none;', name = 'profile_picture')
											img#profile-picture(src="../../images/fund_img_placeholder.jpg")
										figcaption#add-profile Upload a profile picture
							.row
								.col-md-12.center-block
									p#description 1. Please enter a brief overview of your grant organisation:
									textarea#description-area
							.row
								.col-md-12.center-block
									p#charity-number 2. Please enter your registered charity number:
									input(type = 'number', id = 'charity-input')

