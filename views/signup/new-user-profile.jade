extends layout-signup
 
block extraHeader
	link(href='/stylesheets/results.css', rel='stylesheet')
	link(href='/stylesheets/token-input-facebook.css', rel='stylesheet')
	link(href='/stylesheets/new-user-profile.css', rel='stylesheet')


block content
	include ../navbar-fund.jade
	#signup-wrapper.container-fluid
		#greeting
			h3='Welcome to Silo, ' + user.username
			h4 Our crowdfunding platform allows you to raise money whilst looking for grants, maximising your chance of success.
		#process-flex-container.center-block
			a.btn.btn-default.process.active(href='#about') About you
				span.glyphicon.glyphicon-menu-right
			a.btn.btn-default.process(href='#education') Education
				span.glyphicon.glyphicon-menu-right
			a.btn.btn-default.process(href='#story') Story
				span.glyphicon.glyphicon-menu-right
			a.btn.btn-default.process(href='#account') Account
				span.glyphicon.glyphicon-menu-right
		#signup-form.center-block
		script#about-template(type='text/template')
			.row#picture-row
				.col-md-3
					p#picture.description Profile Picture
				.col-md-1
				.col-md-6
					#profile-picture
						img#placeholder-picture(src="../../images/fund_img_placeholder.jpg")
						span Upload a profile picture. This can help you make a great first impression on funds and potential donors!
					input#my_file(type='file', style='display: none;', name = 'profile_picture')
			.row.fund-goal
				.col-md-3
					p#amount.description Your Fund goal
				.col-md-1
				.col-md-6
					input#input-amount(placeholder="Â£", type="number", name='funding_needed') 
			.row
				.col-md-3
					p#date_of_birth.description Date of Birth
				.col-md-1
				.col-md-6
					input#date-input(type='date', name="date_of_birth")
			.row
				.col-md-3
					p#country_of_residence.description Country of residence
				.col-md-1
				.col-md-6
					input#country-input(name="country_of_residence")
			.row#religion-row
				.col-md-3
					p#religion.description Religious beliefs
				.col-md-1
				.col-md-6
					input#religion-input(name="religion")
			.container-fluid.save
				a#save.btn.btn-primary(href="#education") Save progress
				a#skip(href='#education') Skip
		script#education-template(type='text/template')
			h1 HELLO
