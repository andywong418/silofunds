.application_form
  p.head Application process
  hr
  script#application-process(type='text/template')
    if fund.application_open_date
      #start_date  <%= application_open_date %>
      p.arrow#arrow_1 
        i.fa.fa-angle-double-down(aria-hidden="true")
    if fund.deadline
      #documents_deadline <%= application_documents %>
      p.arrow#arrow_2 
        i.fa.fa-angle-double-down(aria-hidden="true")
    if fund.interview_date
      #interviews <%= interview_date %>
      p.arrow#arrow3
        i.fa.fa-angle-double-down(aria-hidden="true")
    if fund.application_decision_date
      #decision_date <%= application_decision_date %>
    if fund.other_application_steps
      #other-application
        p Other application steps:  
          span=fund.other_application_steps
    a#apply_now_link.btn.btn-default(href!= '<%= application_link %>') Apply now
    span#application-notification
  script#tips-template(type='text/template')
      .mb-style-3
        blockquote#tips
          p <%= tip %>
        if organisation.profile_picture  
          .mb-attribution
              p.mb-author <%= tip_giver %>
              cite 
                //- a(href='#0') Funded by Silo for life
                .mb-thumb
                  img(src!= '<%= profile_picture %>')
