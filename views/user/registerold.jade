extend ../layout

block extraHeader
  link(href='/stylesheets/user/register.css', rel='stylesheet')
  link(href='/stylesheets/user/login.css', rel='stylesheet')
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
  script(src='/javascript/user/register.js')
block content
  .container
    .col-md-4.col-md-offset-4
      a(href="/")
        #img_div
          img#brand-image(src="/images/silo no background.gif")
    .col-md-6.col-md-offset-3
      if flashMsg
        .alert.alert-danger= flashMsg
    .row.centered-form
      .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
        .panel.panel-default
          .panel-heading
            h3.panel-title
              | Register for silo
          .panel-body
            #user_type_div.late_hide
              h4 What would you like to sign up as?
              .user-type.col-xs-12
                .col-xs-12
                  select#user_type_dropdown.form-control(name='user_type')
                    option(disabled='', selected='', value='')
                    option(value='student') Student
                    option(value='organisation') Fund institution
                    option(value='donor') Donor
                  br
            form.initial_hide(accept-charset='UTF-8', name='register', id='register', role='form', action="/register", method='post')
              // If a user show this
              .row#user
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#firstName.form-control(type='text', name='firstName', placeholder='First Name')
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#lastName.form-control(type='text', name='lastName', placeholder='Last Name')
              // If a fund show this
              .row#fund
                .col-xs-12.col-sm-12.col-md-12
                  .form-group
                    input#fundName.form-control(type='text', name='fundName', placeholder='Institution name')
              .form-group
                .inputDiv
                  input#email.form-control(type='email', name='email', placeholder='Email Address')
                .checker#emailError
                .checker#emailSuccess
              .row
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#password.form-control(type='password', name='password', placeholder='Password')
                    .checker#passwordError 
                .col-xs-6.col-sm-6.col-md-6
                  .form-group
                    input#password_confirmation.form-control(type='password', name='confirmPassword', placeholder='Confirm Password')
                // Hidden inputs
                .fundOptionCheckbox.hide_always
                  label
                    input#donor_hidden.right(type='hidden', value='false', name='donor_registration')
                    input#fundCheckbox(name='fundOption', type='checkbox', form="register")
                    |  Sign up as a fund institution
              input.btn.btn-lg.btn-success.btn-block(type='submit', value='Register')
            hr
            center.fund_hide.initial_hide
              h4 OR
            a.fund_hide.initial_hide.btn.btn-lg.btn-facebook.btn-block(href='/auth/facebook')
              span.fa.fa-facebook
              |   Register via facebook

    .col-md-6.col-md-offset-3#signin
      h2 Already have an account?
      a(href='/login')
        p.lead Sign in
