extends ../layout
block extraHeader
  link(rel="stylesheet", href="/stylesheets/user/login.css")
  
block content
  .container
    .col-md-4.col-md-offset-4
      #img_div
        img#brand-image(src="/images/silo no background.gif")
    .row
      .col-md-6.col-md-offset-3
        if logoutMsg
          .alert.alert-success= logoutMsg
        .panel.panel-default
          .panel-heading
            h3.panel-title Login via silofunds
          .panel-body
            form(accept-charset='UTF-8', role='form', action='/user/login', method='post')
              fieldset
                .form-group
                  input.form-control(placeholder='yourmail@example.com', name='useremail', type='text')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                .checkbox
                  label
                    input(name='remember', type='checkbox', value='Remember Me')
                    |  Remember Me
                input.btn.btn-lg.btn-success.btn-block(type='submit', value='Login')
            hr
            center
              h4 OR
            input.btn.btn-lg.btn-facebook.btn-block(type='submit', value='Login via facebook')
            
    .col-md-6.col-md-offset-3#register
      h2 Need an account?
      a(href='/user/register')
        p.lead Register now!
