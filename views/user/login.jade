extend ../layout

block extraHeader
  link(href='/stylesheets/donor/register.css', rel='stylesheet')
  link(href='/stylesheets/user/register.css', rel='stylesheet')
  link(href='/stylesheets/donor/login.css', rel='stylesheet')
  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")


block content
  a(href="/")
    #img_div
      img#silo-image(src="/images/silo no background.gif")
  .col-md-6.col-md-offset-3
    if flashMsg
      .alert.alert-danger= flashMsg
  #payment-div
  #form_container
    .flex_div
      .signup
        form(accept-charset='UTF-8', name='login', id='login', role='form', action="/login", method='post')
          input#email(type='text', name='email', placeholder='Email:')
          p.error.email No account with that email exists
          input#password.right(type='password', name='password', placeholder='Password:')
          input.submit.login(type='submit' placeholder='SUBMIT', value='Login')
      #register
        span Need an account?
        a(href='/register')
          button.login Register
  
    

block scripts
  script(src='/javascript/user/login.js')    
