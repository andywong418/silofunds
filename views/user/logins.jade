extends ../layout
block extraHeader
  link(rel="stylesheet", href="/stylesheets/user/login.css")
block content
  .container
    .col-md-4.col-md-offset-4
      a(href="/")
        #img_div
          img#brand-image(src="/images/silo no background.gif")
    #main-login
      .row
        .col-md-6.col-md-offset-3
          if logoutMsg
            .alert.alert-success= logoutMsg
          if goodbye
            .alert.alert-success.flash-deleted
              h4 Your account has successfully been deleted
              .lead We're sorry to see you go
          .panel.panel-default
            .panel-heading
              h3.panel-title Login via silofunds
            .panel-body
              form(accept-charset='UTF-8', role='form', action='/login', method='post')
                fieldset
                  .form-group
                    .inputDiv
                      input.form-control#email(placeholder='yourmail@example.com', name='email', type='text')
                    .checker#emailError
                  .form-group
                    .inputDiv
                      input.form-control#password(placeholder='Password', name='password', type='password', value='')
                    .checker#passwordError 
                  .checkbox
                    label#rememberMe
                      input(name='remember_me', type='checkbox', value='Remember Me')
                      |  Remember Me
                    a#passwordReset(href="/forgot")
                      p forgot password?
                  input.btn.btn-lg.btn-success.btn-block(type='submit', value='Login')
              hr
              center
                h4 OR
              a.btn.btn-lg.btn-facebook.btn-block(href='/auth/facebook')
                span.fa.fa-facebook
                |   Login via facebook
              
      .col-md-6.col-md-offset-3#register
        h2 Need an account?
        a(href='/register')
          p.lead Register now!
        
        
block scripts
  script(src='/javascript/user/login.js')
