extends ../layout

block extraHeader
	link(href='/stylesheets/user-profile.css', rel='stylesheet')
	link(href='/stylesheets/user-settings.css', rel='stylesheet')
block content
	include ../navbar.jade
	include ../advanced-search.jade
	script#settings-template(type='text/template')
		section#edit.container.content-section
			.row
				.col-md-2.col-xs-4#categories
					ul
						li#general-settings
							i.fa.fa-gears
							| General settings
						li#account
							i.fa.fa-lock
							| Account details
					hr
					ul
						li#logout
							a(href='/user/logout')
								| Log out
				.col-md-1
				.col-md-7.col-xs-8#profile-settings
					form(action='/user/settings/', method='post', id='change-settings')
						.general
							.row#username-row
								.col-md-5
									p Name:
								.col-md-5
									p#grey <%= name %>
								.col-md-1
									i.fa.fa-pencil.edit-username
									p.edit Edit
							.row#input-name
								.col-md-12.center-block
									button#save-username.save Save Changes
							hr.account
							.row#email-row
								.col-md-5
									p Email:
								.col-md-5
									p#grey= user.email
								.col-md-1
									i.fa.fa-pencil.edit-email
									p.edit Edit
							.row#input-email
								.col-md-12.center-block
									button#save-email.save Save Changes
							hr.account
							.row#password-row
								.col-md-5
									p Password:
								.col-md-5
									p#grey Change password
								.col-md-1
									i.fa.fa-pencil.edit-password
									p.edit Edit
							.row#input-password
								.col-md-12.center-block
									button#save-password.save Save Changes
							hr.account
							.row
								.col-md-5
									p Receive email updates weekly
								.col-md-1
									input#email_updates(type='checkbox', name='email-updates', value = 'email-updates')
							br
						.profile-edit
							.row#description-row
								.col-md-4
									p Description:
								.col-md-6
									p#grey <%= description %>
								.col-md-1
									i.fa.fa-pencil.edit-password
									p.edit Edit
							.row#input-description
								.col-md-12.center-block
									button#save-description.save Save changes
							hr
							.row#nationality-row
								.col-md-5
									p Nationality:
								.col-md-5
									p#grey <%= nationality %>
								.col-md-1
									i.fa.fa-pencil.edit-nationality
									p.edit Edit
							.row#input-nationality
									.col-md-12.center-block
										button#save-nationality.save Save Changes
							hr
							.row#religion-row
								.col-md-5
									p Religion:
								.col-md-5
									p#grey <%= religion %>
								.col-md-1
									i.fa.fa-pencil.edit-religion
									p.edit Edit
							.row#input-religion
								.col-md-12.center-block
									button#save-religion.save Save changes
							hr
							.row#funding_needed-row
								.col-md-5
									p Funding Needed:
								.col-md-5
									p#grey <%= funding_needed %>
								.col-md-1
									i.fa.fa-pencil.edit-funding_needed
									p.edit Edit
							.row#input-funding_needed
								.col-md-12.center-block
									button#save-funding_needed.save Save changes
							//		
								hr
								.row
									.col-md-6
										p Receive email updates weekly
									.col-md-5
										// input(type='checkbox', name='email-updates', checked='')

