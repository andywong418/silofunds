extends ../layout
block extraHeader
  link(rel="stylesheet", href="/stylesheets/user/forgot.css")

block content
  .container
      .row
        .row
          .col-md-6.col-md-offset-3
            .panel.panel-default
              .panel-body
                .text-center
                  h3
                    i.fa.fa-lock.fa-4x
                  h2.text-center Password reset
                  p Enter your email address below
                  .flash_messages#flash_messages_forgot
                    if error
                      .alert.alert-danger= error
                    if success
                      .alert.alert-success= success
                  .panel-body#border-remove
                    form.form(method='post', action="/forgot")
                      fieldset
                        .form-group
                          .input-group
                            span.input-group-addon
                              i.glyphicon.glyphicon-envelope.color-blue
                            input#emailInput.form-control(placeholder='email address', type='email', name="email", oninvalid="setCustomValidity('Please enter a valid email address!')", onchange="try{setCustomValidity('')}catch(e){}", required='')
                        .form-group
                          input.btn.btn-lg.btn-primary.btn-block(value='Send My Password', type='submit')
                    a(href="/login")      
                      p#login.lead Back to login
