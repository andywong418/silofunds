doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Potfund is the leading provider of funding online.')
    meta(name='author', content='')
    title Potfund
    link(rel='shortcut icon', href='../img/favicon.ico')
    link(href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Kameron', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Raleway', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Roboto+Slab', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='/stylesheets/style.css')

    style.
      #subscribeLink {
      margin: 1em;
      background: gold !important;
      color: black;
      }
  body#page-top(data-spy='scroll', data-target='.navbar-fixed-top')
    block content
      nav#nav.navbar.navbar-custom.navbar-fixed-top(role='navigation')
          #container.container

            h4.brand-heading
              a(href="http://www.google.com")
               b
                | P
                span#title otfund
            #collapse.collapse.navbar-collapse.navbar-right.navbar-main-collapse
              ul#menu_icon.nav.navbar-nav
                li.hidden
                  a(href='#page-top')
                li
                  a.page-scroll(href='#about') The App
                li
                  a.page-scroll(href='#trial')
                    span.light Start a grant
                li
                  a.page-scroll(href='#contact') Contact Us


      section#about.container.content-section.text-center
          .row
            a(href='/funds/new') Create new fund
            .col-lg-8.col-lg-offset-2
              div.results
                h3
                  span='Manage ' + funds.length + ' funds'

              div.page-header
                ul.database
                  - for (var i=0; i < funds.length; i++) {
                    - var title = funds[i].title;
                    - var link = funds[i].link;
                  .fund_list
                    li
                      h3.fund_title=funds[i].title
                    li
                      p.fund_amount Amount given:
                        span.control= ' Â£'+funds[i].maximum_amount
                      - if (funds[i].minimum_age) {
                        p.fund_min_age Minimum Age:
                          span.control=funds[i].minimum_age
                      - }
                      - if (funds[i].maximum_age) {
                        p.fund_max_age Maximum Age:
                          span.control=funds[i].maximum_age
                      - }
                      p.fund_description Additional Information:
                         span.control=descriptions[title]
                      h4.fund_link
                       a(href=link, target='_blank') Apply Now
                    hr
                  - }
