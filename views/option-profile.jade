  .alert.alert-info(role='alert')
      a(href='/organisation/options/' + fund.id + '/edit') 
        span.glyphicon.glyphicon-pencil(aria-hidden='true')
        | Make changes to this funding profile
  #big_flex_div.container
    #left_div.container
      #box_1
        
        a#fundWebsite(href=fund.link, target='_blank') 
          if organisation
            img#fundImage(src=organisation.profile_picture)
          else
            img#fundImage(src='/images/fund_img_placeholder.jpg')
      #box_2
        if fund.link
          a#external-link(href!=fund.link)
            h4#bio=fund.title
        else  
          h4#bio=fund.title
        #left_info_div
          p#fundBio 
          if fund.number_of_places
            .info-row
              i.fa.fa-archive(aria-hidden="true")
              p#number_of_places= fund.number_of_places + ' '
              span places available
          if fund.minimum_amount && !fund.maximum_amount
            .info-row
              i.fa.fa-gbp(aria-hidden="true")
              p#amount=fund.minimum_amount + '+'
          if !fund.minimum_amount && fund.maximum_amount
            .info-row
              i.fa.fa-gbp(aria-hidden="true")
              p#amount='<' + fund.maximum_amount
          if fund.minimum_amount && fund.maximum_amount
            .info-row
              i.fa.fa-gbp(aria-hidden="true")
              p#amount=fund.minimum_amount + ' - ' + fund.maximum_amount
          if fund.duration_of_scholarship
            .info-row
              i.fa.fa-calendar-check-o(aria-hidden="true")
              p#duration= 'This ' + fund.support_type + ' will last for ' 
                span= fund.duration_of_scholarship
        a#message.center-block.btn.btn-default(href="mailto:" + organisation.email)
          i.fa.fa-comments-o(aria-hidden="true")
          |Message us
      //- #box_3
      //-   p#general General Info
      //-   hr
    #right_div
      //- #eligibility_div 
      //-   p#eligibility_div_p This box will display any users eligibility for your fund
      #box_3_right
        p#eligibility_para_right Eligibility
        hr
        .eligibility-display
          #subject-handler
            .col-md-12
              span.glyphicon.glyphicon-book
              p.description Subject
          #personal-handler
            .col-md-12
              span.glyphicon.glyphicon-user
              p.description Personal
          #education-handler
            .col-md-12
              span.glyphicon.glyphicon-education
              p.description Education
          #location-handler
            .col-md-12
              span.glyphicon.glyphicon-globe
              p.description Location
          #other-handler
            .col-md-12
              p.description Other eligibility requirements
          .row#just-trying
            script#image-template(type='text/template')
              .col-md-4.criteria-box
                .col-md-2
                  img#icon-image(src!= '<%= imageSource %>', data-toggle = 'tooltip', title!= '<%= section%>')
                .col-md-10
                  span.criteria <%=criteria %>
            script#other-eligibility-template(type='text/template')
              .other-box
                .col-md-12
                  span.criteria <%= criteria %>

      #eligibility_div 
        p#eligibility_div_p 
      #notEligible.modal-box
        .modal-container 
          .modal-bar
            p Eligibility explanation
          script#notEligible-template(type='text/template')
            .row
              #wrong-cross.col-md-2
                i.fa.fa-times-circle(aria-hidden="true")
              #fund-requirements.col-md-5
                p#requirement-description <%= requirement_description %>
                p#requirement <%= requirement %>
              #user-info.col-md-5
                p#user-description <%= user_description %>
                p#user <%= user %>
          a.disagree-email(href="mailto:howard@silofunds.com") Disagree? Email us and explain why you think you should be eligible for this fund.
      #application_form
        p.head Application process
        hr
        script#application-process(type='text/template')
          if fund.application_open_date
            #start_date  <%= application_open_date %>
            p.arrow#arrow_1 
              i.fa.fa-angle-double-down(aria-hidden="true")
          #documents_deadline <%= application_documents %>
          p.arrow#arrow_2 
            i.fa.fa-angle-double-down(aria-hidden="true")
          if fund.interview_date
            #interviews <%= interview_date %>
            p.arrow#arrow3
              i.fa.fa-angle-double-down(aria-hidden="true")
          if fund.application_decision_date
            #decision_date <%= application_decision_date %>
          if fund.other_application_steps
            #other-application
              p Other application steps:  
                span=fund.other_application_steps
          a#apply_now_link.btn.btn-default(href!= '<%= application_link %>') Apply now

      script#tips-template(type='text/template')
        .mb-style-3
          blockquote#tips
            p <%= tip %>
          .mb-attribution
              p.mb-author <%= tip_giver %>
              cite 
                //- a(href='#0') Funded by Silo for life
              .mb-thumb
                img(src!= '<%= profile_picture %>')
          //-         #scholars_div
  #separator_1      
  #review_div.container-fluid.center-block
    .col-md-6
      p#review-number 0 Reviews from the Silo community
    .col-md-2
    .col-md-2
      a.btn.btn-primary Write a review
      
