                    img#icon-image(src!= '<%= imageSource %>', data-toggle = 'tooltip', title!= '<%= section%>')
                  .col-md-10
                    span.criteria <%=criteria %>
              script#other-eligibility-template(type='text/template')
                .other-box
                  .col-md-12
                    span.criteria <%= criteria %>

        #eligibility_div 
          p#eligibility_div_p 
        #notEligible.modal-box
          .modal-container 
            .modal-bar
              p Eligibility explanation
            script#notEligible-template(type='text/template')
              .row
                #wrong-cross.col-md-2
                  i.fa.fa-times-circle(aria-hidden="true")
                #fund-requirements.col-md-5
                  p#requirement-description <%= requirement_description %>
                  p#requirement <%= requirement %>
                #user-info.col-md-5
                  p#user-description <%= user_description %>
                  p#user <%= user %>
            a.disagree-email(href="mailto:howard@silofunds.com") Disagree? Email us and explain why you think you should be eligible for this fund.
        #application_form
          p.head Application process
          hr
          script#application-process(type='text/template')
            if fund.application_open_date
              #start_date  <%= application_open_date %>
              p.arrow#arrow_1 
                i.fa.fa-angle-double-down(aria-hidden="true")
            #documents_deadline <%= application_documents %>
            p.arrow#arrow_2 
              i.fa.fa-angle-double-down(aria-hidden="true")
            if fund.interview_date
              #interviews <%= interview_date %>
              p.arrow#arrow3
                i.fa.fa-angle-double-down(aria-hidden="true")
            if fund.application_decision_date
              #decision_date <%= application_decision_date %>
            if fund.other_application_steps
              #other-application
                p Other application steps:  
                  span=fund.other_application_steps
            a#apply_now_link.btn.btn-default(href!= '<%= application_link %>') Apply now
            span#application-notification
      script#tips-template(type='text/template')
